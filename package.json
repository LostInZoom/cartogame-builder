{
  "name": "cartogame",
  "version": "1.0.0",
  "description": "A game about cartographic navigation.",
  "author": "jberli",
  "license": "GPL-3.0-or-later",
  "source": "index.js",
  "type": "module",
  "scripts": {
    "build-watch": "parcel watch ./client/index.html --public-url /cartogame --dist-dir dist/cartogame",
    "start-watch": "nodemon ./server/index.js",
    "dev": "concurrently --kill-others \"npm run start-watch\" \"npm run build-watch\"",
    "build": "parcel build ./client/index.html --public-url /cartogame --dist-dir dist/cartogame",
    "start": "npm run build && node server/index.js",
    "deploy": "node server/index.js"
  },
  "keywords": [
    "game",
    "cartography"
  ],
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "ol": "^10.3.1",
    "proj4": "^2.15.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.13.3",
    "@parcel/transformer-sass": "^2.13.3",
    "@parcel/transformer-webmanifest": "^2.13.3",
    "concurrently": "^9.1.2",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.1.9",
    "parcel": "^2.13.3",
    "parcel-plugin-clean-dist": "^0.0.6",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "sass": "^1.83.4",
    "svgo": "^3.3.2"
  }
}
